                            android:layout_marginTop="8dp"
                            android:layout_marginHorizontal="16dp">
                            <Button
                                android:id="@+id/btnOpen1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN"
                                android:textAllCaps="false"/>
